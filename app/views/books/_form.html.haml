= render 'shared/breadcrumb', index_name: I18n.t('activerecord.models.book.other'), index_path: books_path, new_name: nil
= form_for @book do |f|
  = render "shared/error_messages", resource: @book
  .row
    .col-6
      .form-group
        = f.label :title, class: 'form-label'
        = f.text_field :title, maxlength: 25, class: 'form-control'
      .form-group
        = f.label :author, class: 'form-label'
        = f.text_field :author, maxlength: 25, class: 'form-control'
      .form-group
        = f.label :category_id, class: 'form-label'
        = f.collection_select :category_id, @categories, :id, :name, {}, class: 'form-control'
      .form-group
        = f.submit class: 'btn btn-outline-secondary'