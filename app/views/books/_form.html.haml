= render 'shared/breadcrumb', index_name:  'Livros', index_path: books_path, new_name: nil
= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .row
    .col-6
      .form-group
        = f.label :title, class: 'form-label'
        = f.text_field :title, maxlength: 25, class: 'form-control'
      .form-group
        = f.label :author, class: 'form-label'
        = f.text_field :author, maxlength: 25, class: 'form-control'
      .form-group
        = f.label :category_id, class: 'form-label'
        = f.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control'
      .form-group
        = f.submit 'Save', class: 'btn btn-outline-secondary'