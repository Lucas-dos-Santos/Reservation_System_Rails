.col-lg-6
  .p-5
    .text-center
      %h1.h4.text-gray-900.mb-4
        = I18n.t('welcome_back')
    = form_for resource, as: resource_name, url: session_path(resource_name), class: 'user' do |f|
      .form-group
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-user', placeholder: I18n.t('enter_email_adress')
      .form-group
        = f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-user', placeholder: I18n.t('your_password')
      - if devise_mapping.rememberable?
        .form-group
          .custom-control.custom-checkbox.small
            = f.check_box :remember_me, class: 'custom-control-input'
            = f.label :remember_me, class: 'custom-control-label'
      = f.submit 'Login', class: 'btn btn-primary btn-user btn-block'
    %hr
    = render 'devise/shared/links'